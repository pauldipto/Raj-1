<body>
    <div class="container">
        <div class="notice-wrapper" id="notice-wrapper">
            <h1>University Bus Service Notices</h1>
        </div>
        <!-- Admin Panel Section -->
        <div class="admin-panel">
            <h3>Admin Panel</h3>
            <textarea id="admin-message" placeholder="Type your notice here..."></textarea>
            <button onclick="postNotice()">Post Notice</button>
        </div>
    </div>

    <script>
        function postNotice() {
            const message = document.getElementById('admin-message').value;
            if (message.trim() === '') {
                alert('Please enter a message.');
                return;
            }

            const noticeWrapper = document.getElementById('notice-wrapper');
            const newNotice = document.createElement('div');
            newNotice.classList.add('notice');

            const currentDate = new Date().toLocaleDateString();
            newNotice.innerHTML = `
                <h2>Admin Notice - ${currentDate}</h2>
                <p>${message}</p>
            `;

            noticeWrapper.appendChild(newNotice);
            document.getElementById('admin-message').value = '';
        }
    </script>
