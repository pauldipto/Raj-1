<body>
    <div class="container">
        <div class="lost-found-wrapper" id="lost-found-wrapper">
            <h1>Metropolitan University Lost and Found</h1>
        </div>
        <!-- Post Item Section -->
        <div class="post-section">
            <h3>Post a Lost or Found Item</h3>
            <textarea id="user-message" placeholder="Describe the lost/found item..."></textarea>
            <button onclick="postItem()">Post Item</button>
        </div>
    </div>

    <script>
        function postItem() {
            const message = document.getElementById('user-message').value;
            if (message.trim() === '') {
                alert('Please enter a description.');
                return;
            }

            const wrapper = document.getElementById('lost-found-wrapper');
            const newItem = document.createElement('div');
            newItem.classList.add('item');

            const currentDate = new Date().toLocaleDateString();
            newItem.innerHTML = `
                <h2>Lost/Found Item - ${currentDate}</h2>
                <p>${message}</p>
            `;

            wrapper.appendChild(newItem);
            document.getElementById('user-message').value = '';
        }
    </script>
